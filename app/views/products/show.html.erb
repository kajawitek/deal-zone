<h1><%= product.name %></h1>

<h5>Description</h5>
<p><%= product.description %></p>

<h5>Price</h5>
<p><%= product.price %></p>

<h5>Quantity</h5>
<p><%= product.quantity %></p>

<ul>
  <li><%= link_to "Edit", edit_product_path(product) %></li>
  <li><%= link_to "Destroy", product_path(product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>
